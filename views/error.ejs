<!DOCTYPE html>
<html dir="ltr">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="robots" content="noindex,nofollow" />
    <title><%= __('APP_NAME') %></title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/images/favicon.png"/>
    <link href="/css/common.css" rel="stylesheet" />
    <%- include('./partials/styles.ejs')%>
  </head>

  <body>
    <div class="main-wrapper">
      <!-- ============================================================== -->
      <!-- Preloader - style you can find in spinners.css -->
      <!-- ============================================================== -->
      <div class="preloader">
        <div class="lds-ripple">
          <div class="lds-pos"></div>
          <div class="lds-pos"></div>
        </div>
      </div>
      <!-- ============================================================== -->
      <!-- Preloader - style you can find in spinners.css -->
      <!-- ============================================================== -->
      <!-- ============================================================== -->
      <!-- Login box.scss -->
      <!-- ============================================================== -->
      <div class="error-box">
        <div class="error-body text-center">
          <h1 class="error-title text-danger">500</h1>
          <h3 class="text-uppercase error-subtitle"><%= __('ERROR_FOUND') %></h3>
          <p class="text-muted mt-4 mb-4">
            <b>Environment: <%= locals.env%></b>
          </p>
          <p class="text-muted mt-4 mb-4">
            <%= (locals.env == 'development') ? locals.error.stack : locals.error.message || '' %>
          </p>
          <a href="/" class="btn btn-danger btn-rounded waves-effect waves-light mb-5 text-white"><%= __('Back to home')%></a>
        </div>
      </div>
    </div>
    <script src="/assets/libs/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap tether Core JavaScript -->
    <script src="/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      $(".preloader").fadeOut();
    </script>
  </body>
</html>
