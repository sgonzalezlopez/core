<link rel="stylesheet" href="/bootstrap-table/bootstrap-table.min.css">
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Basic Datatable</h5>
        <div class="table-responsive">
            <table id="table" data-toggle="table" data-url="/api/user" class="table table-striped table-bordered clickable" detail-url="/admin/user/">
            <thead>
                <tr>
                    <th data-field="username"><%= __('COL_Username') %></th>
                    <th data-field="email"><%= __('COL_Email') %></th>
                    <th data-field="roles"><%= __('COL_Roles') %></th>
                    <th data-field="active" data-formatter="core.formatters.boolean"><%= __('COL_Active') %></th>
                    <th data-field="lastLogin" data-formatter="core.formatters.datetime"><%= __('COL_lastLogin') %></th>
                    <th data-field="id" data-formatter="actionFormatter" data-align="center" data-events="actionEvents"><%= __('COL_actions') %></th>
                </tr>
            </thead>
        </table>
    </div>
</div>
</div>
</div>



<script>

function actionFormatter(value, row, index) {
  return [
    '<a class="view" href="/admin/user/' + row._id + '" title="">',
    '<i class="fa fa-eye"></i>',
    '</a> ',
    '<a class="delete" href="javascript:void(0)" title="">',
        '<i class="fa fa-trash"></i>',
        '</a> ',        
  ].join('');
}
</script>